{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "src/index.ts" }
  ],
  "build": {
    "env": {
      "PRISMA_GENERATE": "true"
    },
    "commands": {
      "build": "npm install && npx prisma generate && npm run build"
    }
  }
}
